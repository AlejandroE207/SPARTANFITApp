@{
    ViewBag.Title = "PrincipalEntrenador";
}

@model List<SPARTANFITApp.Dto.EjercicioDto>
@{
    // Recuperar el valor de la variable de sesión
    SPARTANFITApp.Dto.PersonaDto personaLogeo = Session["entrenadorLogged"] as SPARTANFITApp.Dto.PersonaDto;
}

@if (personaLogeo == null)
{
    <!DOCTYPE html>
    <html>
    <head>
        <title>Redirección automática en ASP.NET</title>
        <script type="text/javascript">
            window.onload = function () {
                setTimeout(function () {
                    window.location.href = 'Index';
                });
            };
        </script>
    </head>
    <body>
        <h1>Inicie Sesion primero</h1>
    </body>
</html>
}
else
{

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Rowdies:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Rowdies:wght@300;400;700&family=Yatra+One&display=swap" rel="stylesheet">
    <link href="~/Scripts/css/StylePrincipalEntrenador.css" rel="stylesheet" />
    <title>PrincipalEntrenador</title>
</head>
<body>

    <header>
        <a href="#" class="logo"> SPARTANFIT</a>
        <ul>
            <li>@Html.ActionLink("Ejercicios", "MostrarEjercicios", "Home")</li>
            <li>@Html.ActionLink("Rutinas", "MostrarRutinas", "Home")</li>
            <li>@Html.ActionLink("Plan Nutricion", "MostrarPlanesAlimenticios", "Home")</li>
            <li>@Html.ActionLink("Alimentos", "MostrarAlimentos", "Home")</li>
            <li>@Html.ActionLink("Cerrar Sesion", "CerrarSesion", "Home")</li>
        </ul>
    </header>
    <div class="mostrarT">

        <div class="campos-container">
            <button class="btn draw-border" onclick="Rutinas()">Rutinas</button>
        </div>
        <div class="campos-container">
            <button class="btn draw-border" onclick="Ejercicio()">Ejercicios</button>
        </div>

        <div class="campos-container">
            <button class="btn draw-border" onclick="PlanA()">Nutricion</button>
        </div>

        <div class="campos-container">
            <button class="btn draw-border" onclick="Alimento()">Alimentos</button>
        </div>
    </div>
    <script>
 function Rutinas() {
     window.location.href = '@Url.Action("MostrarRutinas", "Home")';
 }
    </script>
    <script>
function Ejercicio() {
    window.location.href = '@Url.Action("MostrarEjercicios", "Home")';
}
    </script>
    <script>
function PlanA() {
    window.location.href = '@Url.Action("MostrarPlanesAlimenticios", "Home")';
}
    </script>
    <script>
function Alimento() {
    window.location.href = '@Url.Action("MostrarAlimentos", "Home")';
}
    </script>



</body>
</html>
}