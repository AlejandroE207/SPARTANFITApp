@{
    ViewBag.Title = "FormActualizarEjercicio";
    SPARTANFITApp.Dto.PersonaDto personaLogeo = Session["entrenadorLogged"] as SPARTANFITApp.Dto.PersonaDto;
}

@if (personaLogeo == null)
{
    <!DOCTYPE html>
    <html>
    <head>
        <title>Redirección automática en ASP.NET</title>
        <script type="text/javascript">
            window.onload = function () {
                setTimeout(function () {
                    window.location.href = 'Index';
                });
            };
        </script>
    </head>
    <body>
        <h1>Inicie Sesion primero</h1>
    </body>
</html>
}
else
{
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Scripts/css/StyleRegistro.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Rowdies:wght@300;400;700&display=swap">
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Rowdies:wght@300;400;700&family=Yatra+One&display=swap"
          rel="stylesheet">
    <title>ActualizarEjercicio</title>
</head>
<body>
    <header>
        <a href="#" class="logo"> SPARTANFIT</a>
        <ul>
            <li>@Html.ActionLink("Ejercicios", "MostrarEjercicios", "Home")</li>
            <li>@Html.ActionLink("Rutinas", "MostrarRutinas", "Home")</li>
            <li>@Html.ActionLink("Plan Nutricion", "MostrarPlanesAlimenticios", "Home")</li>
            <li>@Html.ActionLink("Alimentos", "MostrarAlimentos", "Home")</li>
            <li>@Html.ActionLink("Cerrar Sesion", "CerrarSesion", "Home")</li>
        </ul>
    </header>
    <div class="cont_form">
        @using (Html.BeginForm("FormActualizarEjercicio", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <h1>Actualizar Ejercicio</h1>
            <div class="form-row">
                <input type="hidden" name="id_ejercicio" value=@Model.id_ejercicio>
                <div>
                    <label for="nombre_ejercicio">Nombres:</label>
                    <input type="text" id="nombre_ejercicio" name="nombre_ejercicio" value="@Model.nombre_ejercicio" required>
                </div>
                <div>
                    <label for="apoyo_visual">Apoyo Visual:</label>
                    <input type="text" id="apoyo_visual" name="apoyo_visual" value="@Model.apoyo_visual" required>
                </div>
            </div>
            <div class="centrado">
                <div class="form-row">
                    <button type="submit" class="boton-crear" onclick="return crearCuenta()">Actualizar</button>
                </div>

            </div>


        }


        @if (ViewData["Mensaje"] != null)
        {
            <p>@ViewData["Mensaje"]</p>
        }
        <div class="botoncito">
            <div class="container">
                <button class="boton-cancelar" onclick="confirmarCancelar()">Cancelar</button>
            </div>
        </div>
    </div>
        <script>
        function confirmarCancelar() {
             window.location.href = '@Url.Action("MostrarEjercicios", "Home")';}

        }
        </script>
    </body>
</html>
}
