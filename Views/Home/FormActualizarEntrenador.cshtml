@model SPARTANFITApp.Dto.PersonaDto

@{
    ViewBag.Title = "FormActualizarEntrenador";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Scripts/css/StyleRegistro.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Rowdies:wght@300;400;700&display=swap">
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Rowdies:wght@300;400;700&family=Yatra+One&display=swap"
          rel="stylesheet">
    <title>ActualizarEntrenador</title>
</head>
<body>
    <header>
        <a href="#" class="logo"> SPARTANFIT</a>
        <ul>
            <li>@Html.ActionLink("Usuarios", "PrincipalAdministrador", "Home")</li>
            <li>@Html.ActionLink("Entrenadores", "MostrarEntrenadores", "Home")</li>
            <li>@Html.ActionLink("Cerrar Sesion", "CerrarSesion", "Home")</li>
        </ul>
    </header>
    <div class="cont_form">
        @using (Html.BeginForm("FormActualizarEntrenador", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <h1>Actualizar Entrenador</h1>
            <div class="form-row">
                <div>
                    <label for="nombres">Nombres:</label>
                    <input type="text" id="nombres" name="nombres" value="@Model.nombres" required>
                </div>
                <div>
                    <label for="apellidos">Apellidos:</label>
                    <input type="text" id="apellidos" name="apellidos" value="@Model.apellidos" required>
                </div>
            </div>
            <div class="form-row">
                <div>
                    <label for="correo">Correo:</label>
                    <input type="email" id="correo" name="correo" value="@Model.correo" required>
                </div>
                <div>
                    <label for="contrasena">Contraseña:</label>
                    <input type="password" id="contrasena" name="contrasena" placeholder="Digite su contraseña actual o la nueva." required>
                </div>
            </div>

            <div>
                <label for="genero">Género:</label>
                <select id="genero" name="genero" required>
                    <option value="">Seleccione</option>
                    <option value="femenino" @(Model.genero == "femenino" ? "selected" : "")>Femenino</option>
                    <option value="masculino" @(Model.genero == "masculino" ? "selected" : "")>Masculino</option>
                </select>
            </div>
            <div class="centrado">
                <div class="form-row">
                    <button type="submit" class="boton-crear" onclick="return crearCuenta()">Actualizar</button>
                </div>

            </div>
        }

        @if (ViewData["Mensaje"] != null)
        {
            <p>@ViewData["Mensaje"]</p>
        }
        <div class="botoncito">
            <div class="container">
                <button class="boton-cancelar" onclick="confirmarCancelar()">Cancelar</button>
            </div>
        </div>
    </div>

    <script>
       

        function confirmarCancelar() {
            return confirm("¿Estás seguro de que quieres cancelar?");
        }
    </script>
</body>
</html>
